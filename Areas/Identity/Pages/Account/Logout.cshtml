@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-brown text-white text-center">
                    <h3 class="mb-0"><i class="fas fa-sign-out-alt me-2"></i>Log Out</h3>
                </div>
                <div class="card-body text-center">
                    <p>Are you sure you want to log out?</p>
                    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" method="post">
                        <button type="submit" class="btn btn-danger me-2">
                            <i class="fas fa-sign-out-alt me-1"></i>Yes, Log Out
                        </button>
                        <a href="~/" class="btn btn-outline-secondary">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>