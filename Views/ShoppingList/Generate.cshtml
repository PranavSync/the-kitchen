@model TheKitchen.Models.Entities.Recipe
@{
    ViewData["Title"] = "Create Shopping List";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header bg-brown text-white">
                    <h3 class="mb-0"><i class="fas fa-shopping-cart me-2"></i>Create Shopping List</h3>
                </div>
                <div class="card-body">
                    <h4 class="text-brown mb-4">@Model.Title</h4>
                    
                    <div class="mb-4">
                        <h5 class="text-brown">Ingredients Needed:</h5>
                        <ul class="list-group">
                            @foreach (var ingredient in Model.RecipeIngredients)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <span>@ingredient.Ingredient.Name</span>
                                    <span class="badge bg-brown rounded-pill">@ingredient.Quantity</span>
                                </li>
                            }
                        </ul>
                    </div>

                    <form asp-action="CreateForRecipe" method="post">
                        <input type="hidden" name="recipeId" value="@Model.Id" />
                        <div class="mb-3">
                            <label for="listName" class="form-label">Shopping List Name</label>
                            <input type="text" class="form-control" id="listName" name="listName" value="@Model.Title Shopping List" required>
                        </div>
                        
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-controller="Recipe" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary me-md-2">Back to Recipe</a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-plus me-1"></i>Create Shopping List
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>