@model List<TheKitchen.Models.Entities.Recipe>
@{
    ViewData["Title"] = "All Recipes";
}

<div class="container">
    <!-- Success Message -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row mb-4">
        <div class="col-12">
            <h1 class="text-brown">Discover Recipes</h1>
            <p class="lead">Find your next favorite dish from our community collection</p>
        </div>
    </div>

    <!-- Search and Filter -->
    <div class="row mb-4">
        <div class="col-md-8">
            <form method="get" class="d-flex">
                <input type="text" name="search" class="form-control me-2" placeholder="Search recipes..." value="@ViewData["SearchTerm"]">
                <select name="category" class="form-select me-2" style="max-width: 200px;">
                    <option value="">All Categories</option>
                    <option value="Vegetarian">Vegetarian</option>
                    <option value="Non-Vegetarian">Non-Vegetarian</option>
                    <option value="Vegan">Vegan</option>
                    <option value="Gluten-Free">Gluten-Free</option>
                    <option value="Desserts">Desserts</option>
                    <option value="Quick Meals">Quick Meals</option>
                </select>
                <button type="submit" class="btn btn-primary">Search</button>
            </form>
        </div>
        <div class="col-md-4 text-md-end">
            <a asp-action="Create" class="btn btn-success me-2">
                <i class="fas fa-plus me-2"></i>Share Recipe
            </a>
            <a asp-action="MyRecipes" class="btn btn-outline-brown">
                <i class="fas fa-book me-1"></i>My Recipes
            </a>
        </div>
    </div>

    <!-- Recipes Grid -->
    <div class="row">
        @if (Model.Any())
        {
            @foreach (var recipe in Model)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card recipe-card h-100">
                        @if (!string.IsNullOrEmpty(recipe.ImagePath))
                        {
                            <img src="@recipe.ImagePath" class="card-img-top" alt="@recipe.Title" style="height: 200px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                                <i class="fas fa-utensils fa-3x text-muted"></i>
                            </div>
                        }
                        <div class="card-body">
                            <h5 class="card-title">@recipe.Title</h5>
                            <p class="card-text text-muted">@recipe.Description</p>
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <small class="text-muted">
                                    <i class="fas fa-clock me-1"></i>@(recipe.PrepTime + recipe.CookTime) min
                                </small>
                                <small class="text-muted">
                                    <i class="fas fa-users me-1"></i>@recipe.Servings servings
                                </small>
                            </div>
                            <div class="mb-2">
                                @foreach (var category in recipe.Categories.Take(2))
                                {
                                    <span class="badge bg-light text-brown me-1">@category.Name</span>
                                }
                                @if (recipe.Categories.Count > 2)
                                {
                                    <span class="badge bg-light text-brown">+@(recipe.Categories.Count - 2) more</span>
                                }
                            </div>
                            <span class="badge recipe-badge">@recipe.Difficulty</span>
                        </div>
                        <div class="card-footer bg-transparent">
                            <div class="btn-group w-100">
                                <a asp-action="Details" asp-route-id="@recipe.Id" class="btn btn-outline-primary btn-sm">
                                    <i class="fas fa-eye"></i>
                                </a>
                                
                                <!-- Show Edit/Delete only if user owns the recipe -->
                                @if (User.Identity.IsAuthenticated && recipe.UserId == User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value)
                                {
                                    <a asp-action="Edit" asp-route-id="@recipe.Id" class="btn btn-outline-warning btn-sm">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form asp-action="Delete" asp-route-id="@recipe.Id" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-outline-danger btn-sm" onclick="return confirm('Are you sure you want to delete \"@recipe.Title\"? This action cannot be undone.')">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center">
                <div class="alert alert-info">
                    <h4>No recipes found!</h4>
                    <p>Try adjusting your search criteria or be the first to share a recipe.</p>
                    <a asp-action="Create" class="btn btn-primary">Share Your Recipe</a>
                </div>
            </div>
        }
    </div>
</div>